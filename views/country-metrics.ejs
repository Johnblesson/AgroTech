<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.svg" type="image/svg+xml">
  <link rel="stylesheet" href="/css/country-metrics.css">
  <title>Country Metrics</title>
  <style>
    /* Your existing styles */
  </style>
</head>
<body>
  <div class="container">
    <h1>Total Visits by Country</h1>

    <!-- Search input -->
    <input type="text" id="searchInput" placeholder="Search for a country..." onkeyup="searchCountry()">

    <table id="countryTable">
      <thead>
        <tr>
          <th>#</th>
          <th>Country</th>
          <th>Total Visits</th>
        </tr>
      </thead>
      <tbody>
        <% countryMetrics.forEach((metric, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= metric.country %></td>
            <td><%= metric.count %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2"><strong>Total Visits:</strong></td>
          <td><strong><%= totalVisits %></strong></td>
        </tr>
      </tfoot>
    </table>

    <!-- Link to go back to the main page -->
    <a href="/view-ip-addresses" class="back-link">Back to IP Table</a>
  </div>

  <script>
     function searchCountry() {
      // Get input value and convert to lowercase for case-insensitive search
      const input = document.getElementById("searchInput").value.toLowerCase();
      const table = document.getElementById("countryTable");
      const rows = table.getElementsByTagName("tr");

      // Loop through table rows and hide those that don't match the search query
      for (let i = 1; i < rows.length; i++) {
        const countryCell = rows[i].getElementsByTagName("td")[1];
        const country = countryCell.textContent || countryCell.innerText;

        if (country.toLowerCase().indexOf(input) > -1) {
          rows[i].style.display = "";
        } else {
          rows[i].style.display = "none";
        }
      }
    }
  </script>
</body>
</html>
