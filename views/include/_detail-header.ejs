/* Dropdown menu styles */
.dropdown {
  position: relative;
}

.dropdown-menu {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background-color: #ffffff;
  border: 1px solid #ddd;
  min-width: 160px;
  z-index: 1000;
  padding: 10px 0;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
}

.dropdown:hover .dropdown-menu {
  display: block; /* Show dropdown on hover */
}

.dropdown-item {
  color: #333;
  padding: 10px 15px;
  text-decoration: none;
  display: block;
  white-space: nowrap;
}

.dropdown-item:hover {
  background-color: #f8f9fa; /* Light background on hover */
  color: #007bff; /* Text color on hover */
}

/* Adjust dropdown to align correctly */
.dropdown-menu li {
  padding: 0;
  margin: 0;
}

.dropdown-menu li a {
  padding: 8px 15px;
}


