<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update User</title>
  <link rel="stylesheet" href="./css/form.css">
  <style>
     /* Card Styling */
     .form-card {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      width: 80%;
      max-width: 700px; /* Increased width */
      margin: 20px auto;
    }

    .formbold-form-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f7f7f7;
    }
  </style>
</head>
<body>
  <header class="header" data-header>
    <div class="overlay" data-overlay></div>
    <div class="header-top">
      <div class="container">
        <ul class="header-top-list">
          <li>
            <a href="/administrator" class="header-top-link">
              <ion-icon name=""></ion-icon>

              <span><%= greeting %> Administrator | <%= user ? user.username : '' %></span>
            </a>
          </li>
        </ul>
        <div class="wrapper">
          <form action="/logout" method="get">
            <button class="header-top-btn">
              <i class="fas fa-sign-out-alt"></i> Logout
            </button>
            </form>
        </div>

      </div>
    </div>
  </header>
<div class="formbold-main-wrapper">
  <div class="form-card">

        <!-- Heading -->
        <h1 style="text-align: center; font-size: 20px; margin-bottom: 20px;">PROFILE DETAILS</h1>

        <!-- User's Photo -->
        <img 
          src="<%= users.photo %>" 
          alt="User's Photo" 
          style="display: block; margin: 0 auto 10px; border-radius: 50%; width: 100px; height: 100px; object-fit: cover;" 
        />
    
        <!-- Paragraph -->
        <p style="text-align: center; font-size: 14px; color: #555; margin-bottom: 20px;">Update user's details below</p>

    <form action="/edit-user/<%= users._id %>?_method=PATCH" method="POST">
      <div class="formbold-input-flex">
        <div>
          <label for="fullname" class="formbold-form-label"> Fullname </label>
          <input
            type="text"
            name="fullname"
            id="fullname"
            value="<%= users.fullname %>"
            class="formbold-form-input"
          />
        </div>

        <div>
          <label for="title" class="formbold-form-label"> Username </label>
          <input
            type="text"
            name="username"
            id="username"
            value="<%= users.username %>"
            class="formbold-form-input"
          />
        </div>

      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="email" class="formbold-form-label"> Email: </label>
        <div>
          <input
            type="email"
            name="email"
            id="email"
            value="<%= users.email %>"
            class="formbold-form-input"
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="phone" class="formbold-form-label"> Phone Number: </label>
        <div>
          <input
            type="text"
            name="phone"
            id="phone"
            value="<%= users.phone %>"
            class="formbold-form-input"
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="placeOfBirth" class="formbold-form-label"> Place of birth: </label>
        <div>
          <input
            type="text"
            name="placeOfBirth"
            id="placeOfBirth"
            value="<%= users.placeOfBirth %>"
            class="formbold-form-input"
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="country" class="formbold-form-label"> Country: </label>
        <div>
          <input
            type="text"
            name="country"
            id="country"
            value="<%= users.country %>"
            class="formbold-form-input"
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="createdAt" class="formbold-form-label"> Created At: </label>
        <div>
          <input
            type="text"
            name="createdAt"
            id="createdAt"
            value="<%= users.createdAt %>"
            class="formbold-form-input"
            readonly
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="password" class="formbold-form-label"> Password: </label>
        <div>
          <input
            type="text"
            name="password"
            id="password"
            value="<%= users.password %>"
            class="formbold-form-input"
            readonly
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">

      <div class="formbold-input-flex">
        <div>
          <label for="status" class="formbold-form-label"> Status: </label>
          <div>
            <select id="status" class="formbold-form-input" name="status">
            <option value="" disabled selected hidden>Select Status</option>
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
          </select>
          </div>
        </div>

        <div>
          <label for="role" class="formbold-form-label"> Role: </label>
          <div>
            <select id="role" class="formbold-form-input" name="role">
            <option value="" disabled selected hidden>Select Role</option>
              <option value="user">User</option>
              <option value="farmer">Farmer</option>
              <option value="admin">Admin</option>
          </select>
          </div>
        </div>
      </div>

